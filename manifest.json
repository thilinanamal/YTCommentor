{
  "manifest_version": 3,
  "name": "YouTube Comment Suggester",
  "version": "1.0",
  "description": "Suggests comments for YouTube videos based on their titles using Google Gemini API.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://studio.youtube.com/*",
    "https://gemini.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch?v=*",
        "https://studio.youtube.com/video/*",
        "https://studio.youtube.com/video/*/comments*",
        "https://studio.youtube.com/video/*/comments/inbox*"
      ],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["utils.js", "youtube.js", "youtubeStudio.js"],
    "matches": [
      "https://www.youtube.com/*", 
      "https://studio.youtube.com/*"
    ]
  }]
}
